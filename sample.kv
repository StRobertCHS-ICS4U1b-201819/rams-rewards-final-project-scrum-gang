<CustLabel@Label>
    color: 0, 0, 0, 1

SampBoxLayout:

<SampBoxLayout>:
    orientation: "vertical"
    padding: 10
    spacing: 10



    BoxLayout:
        orientation: "horizontal"
        height: 30

        BoxLayout:
            orientation: "horizontal"
            size_hint_x: .22

            TabbedPanel:
                do_default_tab: False

                TabbedPanelItem:
                    text: "1 RAMS REWARDS POINT"

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: .55

                        CheckBox:
                            group: "Activities"
                            value: root.act1
                            size_hint_y: .25
                            size_hint_x: 1.2

                        CustLabel:
                            text: "Activity 1"
                            size_hint_y: .15

                        CheckBox:
                            group: "Activities"
                            value: root.act2
                            size_hint_y: .05

                        CustLabel:
                            text: "Activity 2"
                            size_hint_y: .15

                        CheckBox:
                            group: "Activities"
                            value: root.act3
                            size_hint_y: .05

                        CustLabel:
                            text: "Activity 3"
                            size_hint_y: .15


                TabbedPanelItem:
                    text: "2 RAMS REWARD POINTS"
                    Label:
                        text: "Content of Second point"

                TabbedPanelItem:
                    text: "3 RAMS REWARD POINTS"
                    Label:
                        text: "Content of Third point"

